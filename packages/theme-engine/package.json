{
  "name": "@omnipanel/theme-engine",
  "version": "1.0.0",
  "description": "Advanced theming engine for OmniPanel AI Workspace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./css": {
      "import": "./dist/css/index.js",
      "require": "./dist/css/index.js",
      "types": "./dist/css/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "omnipanel",
    "theme",
    "theming",
    "css",
    "design-system",
    "styling",
    "customization"
  ],
  "author": "OmniPanel Team",
  "license": "MIT",
  "dependencies": {
    "chroma-js": "^2.4.2",
    "color2k": "^2.0.3",
    "styled-components": "^6.1.8",
    "emotion": "^11.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@emotion/css": "^11.11.2",
    "polished": "^4.3.1",
    "color": "^4.2.3",
    "tinycolor2": "^1.6.0",
    "colord": "^2.9.3",
    "culori": "^3.3.0",
    "css-tree": "^2.3.1",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "sass": "^1.69.5",
    "less": "^4.2.0",
    "stylus": "^0.62.0"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.4",
    "@types/color": "^3.0.6",
    "@types/tinycolor2": "^1.4.6",
    "@types/styled-components": "^5.1.34",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "files": [
    "dist",
    "themes",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/omnipanel/omnipanel.git",
    "directory": "packages/theme-engine"
  },
  "bugs": {
    "url": "https://github.com/omnipanel/omnipanel/issues"
  },
  "homepage": "https://omnipanel.ai/docs/theming"
} 