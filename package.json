{
  "name": "omnipanel-monorepo",
  "version": "1.0.0",
  "description": "Omnipanel AI Workspace - Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:force": "tsc --build --force",
    "build:watch": "tsc --build --watch",
    "dev": "tsc --build --watch",
    "type-check": "tsc --build --dry",
    "clean": "rm -rf packages/*/dist apps/*/dist packages/*/.tsbuildinfo apps/*/.tsbuildinfo",
    "clean:all": "npm run clean && rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "build:types": "tsc --build packages/types",
    "build:config": "tsc --build packages/config",
    "build:database": "tsc --build packages/database",
    "build:ui": "tsc --build packages/ui",
    "build:llm-adapters": "tsc --build packages/llm-adapters",
    "build:core": "tsc --build packages/core",
    "build:web": "cd apps/web && npm run build",
    "build:desktop": "cd apps/desktop && npm run build",
    "build:docs": "cd apps/docs && npm run build",
    "build:website": "cd apps/website && npm run build",
    "dev:types": "tsc --build --watch packages/types",
    "dev:config": "tsc --build --watch packages/config",
    "dev:database": "tsc --build --watch packages/database",
    "dev:ui": "tsc --build --watch packages/ui",
    "dev:llm-adapters": "tsc --build --watch packages/llm-adapters",
    "dev:core": "tsc --build --watch packages/core",
    "dev:web": "cd apps/web && npm run dev",
    "dev:desktop": "cd apps/desktop && npm run dev",
    "dev:docs": "cd apps/docs && npm run dev",
    "dev:website": "cd apps/website && npm run dev",
    "dev:mobile": "cd apps/mobile && npm start",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:web": "cd apps/mobile && npm run web",
    "mobile:build": "cd apps/mobile && npm run build:all",
    "mobile:build:ios": "cd apps/mobile && npm run build:ios",
    "mobile:build:android": "cd apps/mobile && npm run build:android",
    "docs:dev": "cd apps/docs && npm run dev",
    "docs:build": "cd apps/docs && npm run build",
    "docs:start": "cd apps/docs && npm start",
    "docs:export": "cd apps/docs && npm run export",
    "website:dev": "cd apps/website && npm run dev",
    "website:build": "cd apps/website && npm run build",
    "website:start": "cd apps/website && npm start",
    "website:export": "cd apps/website && npm run export",
    "lint": "eslint packages/*/src apps/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src apps/*/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,json,md}\" \"apps/*/src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,json,md}\" \"apps/*/src/**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "reinstall": "npm run clean:all && npm install",
    "reset": "npm run clean && npm run build",
    "setup": "npm install && npm run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.4"
}
